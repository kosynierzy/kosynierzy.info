<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Published at</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for article <- @articles do %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.published_at %></td>

      <td>
        <%= link "Edit", to: Routes.admin_article_path(@conn, :edit, article) %>
        <%= link "Delete", to: Routes.admin_article_path(@conn, :delete, article), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Article", to: Routes.admin_article_path(@conn, :new) %></span>
